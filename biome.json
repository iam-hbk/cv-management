{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"ignoreUnknown": false,
		"include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.json", "**/*.css"],
		"ignore": [
			"**/node_modules/**",
			"**/.next/**",
			"**/dist/**",
			"**/build/**",
			"**/coverage/**",
			"**/.turbo/**",
			"**/out/**",
			"**/.env*",
			"**/public/**",
			"**/*.d.ts",
			"**/.vercel/**",
			"**/convex/_generated/**"
		]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "warn",
				"noUnusedImports": "warn",
				"useExhaustiveDependencies": "warn",
				"useHookAtTopLevel": "error"
			},
			"style": {
				"useConst": "warn",
				"noUselessElse": "warn",
				"noDefaultExport": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "warn",
				"noExplicitAny": "warn",
				"noConsole": "off",
				"noDebugger": "warn"
			},
			"complexity": {
				"noForEach": "warn",
				"noBannedTypes": "off"
			},
			"a11y": {
				"recommended": true,
				"noSvgWithoutTitle": "off",
				"noLabelWithoutControl": "off"
			},
			"performance": {
				"recommended": true
			},
			"security": {
				"recommended": true
			}
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingCommas": "es5"
		},
		"globals": ["console", "process", "Buffer", "__dirname", "__filename"]
	},
	"json": {
		"formatter": {
			"trailingCommas": "none",
			"indentStyle": "tab",
			"indentWidth": 2
		}
	},
	"css": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineWidth": 100,
			"quoteStyle": "double"
		},
		"linter": {
			"enabled": true
		}
	},
	"overrides": [
		{
			"include": ["**/next.config.{js,ts}", "**/tailwind.config.{js,ts}", "**/*.config.{js,ts}"],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					},
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		},
		{
			"include": [
				"**/pages/**",
				"**/app/**/page.{tsx,jsx}",
				"**/app/**/layout.{tsx,jsx}",
				"**/app/**/route.ts"
			],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		},
		{
			"include": ["**/convex/**/*.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noConsole": "off"
					}
				}
			}
		}
	]
}
